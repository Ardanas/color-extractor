{
  "manifest_version": 3,
  "name": "Page Color Extractor",
  "version": "1.0",
  "description": "Extract and display main colors from the current page, sorted by weight",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "windows"  // Add this line
  ],
  "background": {
    "service_worker": "background.js"
  }
}